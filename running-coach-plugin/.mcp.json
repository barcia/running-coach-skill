{
    "Running Coach Memory": {
        "command": "uv",
        "args": ["run", "--directory", "~/.local/opt/running-coach-memory-mcp", "python", "-m", "memory_mcp.server"],
        "env": {
            "OPENROUTER_API_KEY": "sk-or-v1-xxxx"
        }
    },
    "Garmin MCP": {
        "command": "uvx",
        "args": [
          "--python",
          "3.12",
          "--from",
          "git+https://github.com/Taxuspt/garmin_mcp",
          "garmin-mcp"
        ]
    }
}
